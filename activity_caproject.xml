<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CAproject"
    android:background="#F6DA85">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/atma_medium"
        android:gravity="center_horizontal"
        android:letterSpacing="0.05"
        android:text="What shall we call you?"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/uname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgup"
        app:layout_constraintVertical_bias="1.0"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="120dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:background="@drawable/imageicon"
            android:foregroundGravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/user"
            app:circularflow_defaultRadius="50dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="26dp"
            />

    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/imgup"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:background="@drawable/cam2"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/uname"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/cv"
        app:layout_constraintVertical_bias="0.0"
        />

    <EditText

        android:id="@+id/uname"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_margin="10dp"
        android:background="@drawable/edittextbg"
        android:fontFamily="@font/atma_medium"
        android:hint="User name.."
        android:letterSpacing="0.1"
        android:paddingLeft="15dp"
        android:textColor="#F8FAFA"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv"
        app:layout_constraintVertical_bias="0.344"
        />

    <Button
        android:id="@+id/nxt"
        android:layout_width="162dp"
        android:layout_height="55dp"
        android:backgroundTint="#F8AA38"
        android:text="Next"
        android:fontFamily="@font/atma_medium"
        android:textSize="23sp"
        android:textAllCaps="false"
        android:drawableRight="@drawable/rightarrow"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uname"
        app:layout_constraintVertical_bias="0.378"
        app:rippleColor="#EAF670"
        />


</androidx.constraintlayout.widget.ConstraintLayout>